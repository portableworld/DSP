		<%= f.hidden_field :order %>
	<% end %>
	
    <%= f.hidden_field :panel_id %>
	
<p>
	<% if controller.action_name == "new" %>
		<%= f.submit 'Create' %>
	<% else %>
		<%= f.submit 'Update' %>
	<% end %>
